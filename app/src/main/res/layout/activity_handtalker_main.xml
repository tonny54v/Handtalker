<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Barra superior azul -->

    <!-- Imágenes del centro -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Logo alargado -->

        <!-- Botones a la derecha -->
        <ImageView
            android:layout_width="232dp"
            android:layout_height="54dp"
            android:layout_gravity="left"
            android:layout_weight="0"
            android:src="@drawable/logo_alargado" />

        <ImageView
            android:id="@+id/ajuste"
            android:layout_width="272dp"
            android:layout_height="52dp"
            android:layout_gravity="right"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ajustes_logo" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imagen_centro1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/topBar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/goodmorning" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_below="@id/imagen_centro1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/abecedario_logo" />

    <!-- Barra de navegación inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="4">

        <ImageView
            android:id="@+id/inicio"
            android:layout_width="8dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:src="@drawable/inicioin" />

        <ImageView
            android:id="@+id/traduccion"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/mensaje_logo" />

        <ImageView
            android:id="@+id/camara"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/camarita" />

        <ImageView
            android:id="@+id/perfil"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/perfilinfo" />
    </LinearLayout>
</RelativeLayout>

