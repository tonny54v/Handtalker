    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/BotonTraduce1"
        android:layout_width="137dp"
        android:layout_height="45dp"
        android:layout_below="@id/frameFrases"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/bluestrong"
        android:textSize="17dp"
        android:text="Traducir" />

    <Button
        android:id="@+id/BotonElimina1"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@id/frameFrases"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/BotonTraduce1"
        android:backgroundTint="@color/bluestrong"
        android:text="Eliminar"
        android:textSize="13dp" />

    <Button
        android:id="@+id/BotonAgrega1"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@id/frameFrases"
        android:layout_centerInParent="true"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@id/BotonTraduce1"
        android:backgroundTint="@color/bluestrong"
        android:text="+ Agregar"
        android:textSize="13dp" />

    <LinearLayout
        android:id="@+id/textotradu"
        android:layout_below="@id/BotonTraduce1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="400dp"
            android:layout_height="43dp"
            android:layout_weight="0"
            android:text="Traduccion:"
            android:textAlignment="center"
            android:textSize="21dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cuadroResultado"
        android:layout_width="396dp"
        android:layout_height="236dp"
        android:layout_below="@+id/textotradu"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/edittext_border"
        android:padding="2dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="190dp"
            android:layout_height="210dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/flechitaDerecha"
            android:layout_width="75dp"
            android:layout_height="46dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="26dp"
            android:layout_toRightOf="@id/imageView"
            android:src="@drawable/flecha_derecha" />

        <ImageView
            android:id="@+id/flechitaIzquierda"
            android:layout_width="70dp"
            android:layout_height="42dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@id/imageView"
            android:src="@drawable/flecha_izquierda" />


    </RelativeLayout>

    <!-- Barra de navegación inferior -->
    <LinearLayout
