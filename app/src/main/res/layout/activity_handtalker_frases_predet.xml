<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Barra superior azul -->

    <!-- Imágenes del centro -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Logo alargado -->

        <!-- Botones a la derecha -->
        <ImageView
            android:layout_width="232dp"
            android:layout_height="54dp"
            android:layout_gravity="left"
            android:layout_weight="0"
            android:src="@drawable/logo_alargado" />

        <ImageView
            android:id="@+id/ajuste"
            android:layout_width="272dp"
            android:layout_height="52dp"
            android:layout_gravity="right"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ajustes" />

    </LinearLayout>

    <!-- Seccion de texto y boton de cambio(flecha)-->
    <LinearLayout
        android:id="@+id/textfecha"
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="59dp"
            android:layout_height="43dp"
            android:layout_gravity="left"
            android:layout_weight="0"
            android:src="@drawable/flechas" />

        <TextView
            android:layout_width="290dp"
            android:layout_height="43dp"
            android:layout_weight="0"
            android:text="Frases predeterminadas"
            android:textAlignment="center"
            android:textSize="21dp" />
    </LinearLayout>

    <!-- Seccion de texto (ingreso texto)-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameFrases"
        android:layout_width="403dp"
        android:layout_height="211dp"
        android:layout_below="@id/textfecha"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/edittext_border"
        android:orientation="horizontal"
        android:padding="8dp">


        <Button
            android:id="@+id/predet1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola"
            android:textColor="@color/white"
            android:backgroundTint="@color/azulInicio"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/predet2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Como estas"
            android:textColor="@color/white"
            android:backgroundTint="@color/azulInicio"
            tools:layout_editor_absoluteX="96dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/predet3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buenos dias"
            android:textColor="@color/white"
            android:backgroundTint="@color/azulInicio"
            tools:layout_editor_absoluteX="228dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/predet4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buenas tardes"
            android:textColor="@color/white"
            android:backgroundTint="@color/azulInicio"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="56dp" />

        <Button
            android:id="@+id/predet5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buenas noches"
            android:textColor="@color/white"
            android:backgroundTint="@color/azulInicio"
            tools:layout_editor_absoluteX="149dp"
            tools:layout_editor_absoluteY="56dp" />

        <Button
            android:id="@+id/predet6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adios"
            android:textColor="@color/white"
            android:backgroundTint="@color/azulInicio"
            tools:layout_editor_absoluteX="299dp"
            tools:layout_editor_absoluteY="56dp" />

        <Button
            android:id="@+id/agregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grisAzul"
            android:text="+ Agregar"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="147dp" />

        <Button
            android:id="@+id/eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grisAzul"
            android:text="- Eliminar"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="147dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/textotradu"
        android:layout_below="@id/frameFrases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="400dp"
            android:layout_height="43dp"
            android:layout_weight="0"
            android:text="Traduccion:"
            android:textAlignment="center"
            android:textSize="21dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/cuadroResultado"
        android:layout_width="396dp"
        android:layout_height="236dp"
        android:layout_below="@+id/textotradu"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/edittext_border"
        android:padding="2dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="221dp"
            android:layout_height="177dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textindicator"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="1/1"
            android:textAlignment="center"
            android:layout_gravity="bottom"
            android:textSize="15dp" />
    </FrameLayout>

    <!-- Barra de navegación inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="4">

        <ImageView
            android:id="@+id/inicio"
            android:layout_width="8dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:src="@drawable/inicioin" />

        <ImageView
            android:id="@+id/traduccion"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/mensaje" />

        <ImageView
            android:id="@+id/camara"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/camarita" />

        <ImageView
            android:id="@+id/perfil"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/perfilinfo" />
    </LinearLayout>
</RelativeLayout>