            android:layout_weight="1"
            android:src="@drawable/mensaje_logo" />

        <ImageView
            android:id="@+id/camara"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/camarita" />

        <ImageView
