<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Barra superior azul -->

    <!-- Imágenes del centro -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Logo alargado -->

        <!-- Botones a la derecha -->
        <ImageView
            android:layout_width="232dp"
            android:layout_height="54dp"
            android:layout_gravity="left"
            android:layout_weight="0"
            android:src="@drawable/logo_alargado" />

        <ImageView
            android:id="@+id/editperfil"
            android:layout_width="76dp"
            android:layout_height="52dp"
            android:layout_gravity="right"
            android:layout_marginEnd="8dp"
            android:src="@drawable/editarimage" />

        <ImageView
            android:id="@+id/ajuste"
            android:layout_width="77dp"
            android:layout_height="52dp"
            android:layout_gravity="right"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ajustes" />

    </LinearLayout>

    <!-- Elementos del centro -->
    <FrameLayout
        android:id="@+id/perfilPhoto"
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/foto"
            android:layout_width="179dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/perfilicon" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/infoName"
        android:layout_below="@id/perfilPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text=" Nombre(s):"
            android:textSize="21dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/name"
        android:layout_below="@id/infoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="394dp"
            android:layout_height="43dp"
            android:background="@drawable/edittext_border"
            android:layout_weight="0"
            android:text=""
            android:textSize="21dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/infoApellido"
        android:layout_below="@id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text=" Apellido(s):"
            android:textSize="21dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/apellido"
        android:layout_below="@id/infoApellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="394dp"
            android:layout_height="43dp"
            android:layout_weight="0"
            android:background="@drawable/edittext_border"
            android:text=""
            android:textSize="21dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/infoTelefono"
        android:layout_below="@id/apellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text=" Telefono:"
            android:textSize="21dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/telefono"
        android:layout_below="@id/infoTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="394dp"
            android:layout_height="43dp"
            android:layout_weight="0"
            android:background="@drawable/edittext_border"
            android:text=""
            android:textSize="21dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/infoCorreo"
        android:layout_below="@id/telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text=" Correo:"
            android:textSize="21dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/correo"
        android:layout_below="@id/infoCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="394dp"
            android:layout_height="43dp"
            android:layout_weight="0"
            android:background="@drawable/edittext_border"
            android:text=""
            android:textSize="21dp" />

    </LinearLayout>


    <!-- Barra de navegación inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="4">

        <ImageView
            android:id="@+id/inicio"
            android:layout_width="8dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:src="@drawable/inicioin" />

        <ImageView
            android:id="@+id/traduccion"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/mensaje" />

        <ImageView
            android:id="@+id/camara"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/camarita" />

        <ImageView
            android:id="@+id/perfil"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/perfilinfo" />
    </LinearLayout>
</RelativeLayout>