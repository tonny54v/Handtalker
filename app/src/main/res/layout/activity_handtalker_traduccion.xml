<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Barra superior azul -->

    <!-- Imágenes del centro -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Logo alargado -->

        <!-- Botones a la derecha -->
        <ImageView
            android:layout_width="232dp"
            android:layout_height="54dp"
            android:layout_gravity="left"
            android:layout_weight="0"
            android:src="@drawable/logo_alargado" />

        <ImageView
            android:id="@+id/ajuste"
            android:layout_width="272dp"
            android:layout_height="52dp"
            android:layout_gravity="right"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ajustes" />

    </LinearLayout>

    <!-- Seccion de texto y boton de cambio(flecha)-->
    <LinearLayout
        android:id="@+id/textfecha"
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/flechita2"
            android:layout_width="59dp"
            android:layout_height="43dp"
            android:layout_gravity="left"
            android:layout_weight="0"
            android:src="@drawable/flechas" />

        <TextView
            android:layout_width="290dp"
            android:layout_height="43dp"
            android:layout_weight="0"
            android:text="Ingresar texto:"
            android:textAlignment="center"
            android:textSize="21dp" />
    </LinearLayout>

    <!-- Seccion de texto (ingreso texto)-->
    <RelativeLayout
        android:id="@+id/ingresatexto"
        android:layout_below="@id/textfecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:layout_width="387dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:gravity="top"
            android:background="@drawable/edittext_border"

            android:hint=" Ingrese el texto aquí"
            android:inputType="textMultiLine" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/textotradu"
        android:layout_below="@id/ingresatexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="400dp"
            android:layout_height="43dp"
            android:layout_weight="0"
            android:text="Traduccion:"
            android:textAlignment="center"
            android:textSize="21dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/cuadroResultado"
        android:layout_width="396dp"
        android:layout_height="236dp"
        android:layout_below="@+id/textotradu"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/edittext_border"
        android:padding="2dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="221dp"
            android:layout_height="177dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textindicator"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="1/1"
            android:textAlignment="center"
            android:layout_gravity="bottom"
            android:textSize="15dp" />
    </FrameLayout>

    <!-- Barra de navegación inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="4">

        <ImageView
            android:id="@+id/inicio"
            android:layout_width="8dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:src="@drawable/inicioin" />

        <ImageView
            android:id="@+id/traduccion"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/mensaje" />

        <ImageView
            android:id="@+id/camara"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/camarita" />

        <ImageView
            android:id="@+id/perfil"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/perfilinfo" />
    </LinearLayout>
</RelativeLayout>